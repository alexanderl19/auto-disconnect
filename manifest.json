{
  "name": "Auto Disconnect",
  "version": "1.0",
  "description": "Auto disconnector for Google Meets",
  "permissions": ["declarativeContent", "storage", "tabs", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["inject.js"],
      "css": ["disconnect.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "512": "images/logo.png"
    }
  },
  "icons": {
    "512": "images/logo.png"
  },
  "manifest_version": 2
}
